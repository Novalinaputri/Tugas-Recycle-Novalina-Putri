<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B6D9F4"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <EditText
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:layout_marginTop="80sp"
            android:background="#34ABE0"
            android:backgroundTint="#34ABE0"
            android:ems="10"
            android:hint="Input Username"
            android:inputType="text"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:background="#34ABE0"
            android:backgroundTint="#34ABE0"
            android:ems="10"
            android:hint="Input Password"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15sp"
            android:backgroundTint="#0D94BD"
            android:gravity="center"
            android:text="Login" />

        <Button
            android:id="@+id/btnloginpage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:backgroundTint="#0D94BD"
            android:text="Login"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnlistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0D94BD"
            android:text="Login List" />

        <Button
            android:id="@+id/btnrecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#0D94BD"
            android:text="Login Recycle" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>